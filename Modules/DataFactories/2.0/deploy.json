{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dataFactoryName": {
      "type": "string",
      "defaultValue": "myv2datafactory",
      "metadata": {
        "description": "Data Factory Name."
      }
    },
    "dataFactoryLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location of Data Factory."
      }
    },
    "apiVersion": {
      "type": "string",
      "defaultValue": "2018-06-01",
      "metadata": {
        "description": "Version of the Data Factory Schema."
      }
    },
    "gitAccountName": {
      "type": "string",
      "metadata": {
        "description": "Git Account Name."
      }
    },
    "gitRepositoryName": {
      "type": "string",
      "metadata": {
        "description": "Git Repository Name."
      }
    },
    "gitBranchName": {
      "type": "string",
      "defaultValue": "master",
      "metadata": {
        "description": "Git Branch Name."
      }
    },
    "gitRootFolder": {
      "type": "string",
      "defaultValue": "/",
      "metadata": {
        "description": "Git Root Folder."
      }
    },
    "diagnosticsWorkspaceName": {
      "type": "string",
      "defaultValue": "vdclaworkspace",
      "metadata": {
        "description": "Log Analytics workspace name for the Log Analytics workspace to which logs will be sent."
      }
    },
    "diagnosticsSettingName": {
      "type": "string",
      "defaultValue": "diagsforloganalytics",
      "metadata": {
        "description": "Name of the setting for Logging."
      }
    }
  },
  "variables": {
    "diagnosticsWorkspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', parameters('diagnosticsWorkspaceName'))]"
  },
  "resources": [
    {
      "apiVersion": "[parameters('apiVersion')]",
      "name": "[parameters('dataFactoryName')]",
      "location": "[parameters('dataFactoryLocation')]",
      "type": "Microsoft.DataFactory/factories",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "repoConfiguration": {
          "type": "FactoryGitHubConfiguration",
          "accountName": "[parameters('gitAccountName')]",
          "repositoryName": "[parameters('gitRepositoryName')]",
          "collaborationBranch": "[parameters('gitBranchName')]",
          "rootFolder": "[parameters('gitRootFolder')]"
        }
      },
      "resources": [
        {
          "type": "providers/diagnosticSettings",
          "name": "[concat('Microsoft.Insights/', parameters('diagnosticsSettingName'))]",
          "dependsOn": [
            "[resourceId('Microsoft.DataFactory/factories', parameters('dataFactoryName'))]"
          ],
          "apiVersion": "2017-05-01-preview",
          "properties": {
            "name": "[parameters('diagnosticsSettingName')]",
            "workspaceId": "[variables('diagnosticsWorkspaceId')]",
            "logs": [ 
              {
                "category": "ActivityRuns",
                "enabled": true,
                "retentionPolicy": {
                  "days": 0,
                  "enabled": false
                }
              },
              {
                "category": "PipelineRuns",
                "enabled": true,
                "retentionPolicy": {
                  "days": 0,
                  "enabled": false
                }
              },
              {
                "category": "TriggerRuns",
                "enabled": true,
                "retentionPolicy": {
                  "days": 0,
                  "enabled": false
                }
              }
            ],
            "metrics": [
              {
                "category": "AllMetrics",
                "enabled": true,
                "retentionPolicy": {
                  "enabled": false,
                  "days": 0
                }
              }
            ]
          }
        }
      ]
    }
  ]
}
    